<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Delivery_Login"
    android:background="@color/colorPrimary">


    <ImageView
        android:id="@+id/Delivery_Icon"
        android:layout_width="182dp"
        android:layout_height="287dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/DeliveryLogin"
        app:srcCompat="@drawable/ic_delivery_login"
        />

    <TextView
        android:id="@+id/DeliveryLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Delivery Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DeliveryUsername"
        android:hint="Username"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/DeliveryLogin"
        android:inputType="textPersonName"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DeliveryPassword"
        android:hint="Password"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/DeliveryUsername"
        android:inputType="textPassword"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnDeliveryLogin"
        android:layout_below="@id/DeliveryPassword"
        android:layout_centerHorizontal="true"
        android:text="Login"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BackBtnDelivery"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/BtnDeliveryLogin"
        android:text="Back"
        />



</RelativeLayout>