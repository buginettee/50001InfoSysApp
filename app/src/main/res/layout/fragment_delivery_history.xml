<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/delivery_history"
    android:background="@color/colorPrimary"
    >

    <TextView
        android:id="@+id/text_Delivery_History"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:text="@string/delivery_history_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_delivery_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/text_Delivery_History"
        />


    <TextView
        android:id="@+id/invisible_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yes"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />



</RelativeLayout>