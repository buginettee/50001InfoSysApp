<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".Login_Main">


    <TextView
        android:id="@+id/Main_Login_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Working Title"
        android:textSize="35sp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_above="@+id/ChooseLogin"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/ChooseLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login as:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />


    <ImageButton
        android:id="@+id/DeliveryChoice"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_below="@id/ChooseLogin"
        android:layout_centerVertical="true"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_delivery_login"
        />


    <ImageButton
        android:id="@+id/HomeChoice"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/ic_home_login"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/DeliveryChoice"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/ChooseLogin"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/DeliveryChoiceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery"
        android:layout_below="@+id/DeliveryChoice"
        android:layout_alignLeft="@+id/DeliveryChoice"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/HomeChoiceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_below="@+id/HomeChoice"
        android:layout_alignLeft="@+id/HomeChoice"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>

