<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    tools:context=".Login_Main">

    <TextView
        android:id="@+id/Main_Login_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Working Title"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="35sp" />


    <TextView
        android:id="@+id/ChooseLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Login as:"
        android:background="@color/colorAccent"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        />


    <ImageButton
        android:id="@+id/DeliveryChoice"
        android:layout_width="210dp"
        android:layout_height="500dp"
        android:layout_below="@id/ChooseLogin"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_delivery_login"
        />


    <ImageButton
        android:id="@+id/HomeChoice"
        android:layout_width="210dp"
        android:layout_height="500dp"
        app:srcCompat="@drawable/ic_home_login" android:background="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/DeliveryChoice"
        android:layout_below="@+id/ChooseLogin"
        />

    <TextView
        android:id="@+id/DeliveryChoiceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="560dp"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:text="Delivery" />

    <TextView
        android:id="@+id/HomeChoiceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:layout_marginStart="290dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="560dp"
        />

    <TextView
        android:id="@+id/tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="170dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="OR"
        android:textStyle="bold"
        android:textSize="30sp" />

</RelativeLayout>

