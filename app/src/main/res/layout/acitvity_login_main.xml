<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Main">


    <TextView
        android:id="@+id/ChooseLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DeliveryLoginButton"
        android:layout_below="@id/ChooseLogin"
        android:layout_centerHorizontal="true"
        android:text="Delivery"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserLoginButton"
        android:layout_below="@id/DeliveryLoginButton"
        android:layout_centerHorizontal="true"
        android:text="User"
        />

</RelativeLayout>

